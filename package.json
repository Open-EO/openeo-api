  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Open-EO/openeo-api.git"
  },
  "devDependencies": {
    "@stoplight/spectral": "^5.9.1",
    "redoc-cli": "^0.13.18"
  },
  "scripts": {
    "start": "redoc-cli serve openapi.yaml --watch --options.expandResponses \"200,201,202,203,204\" --options.pathInMiddlePanel true",
    "build": "redoc-cli build openapi.yaml -o redoc.html --title \"openEO API\" --cdn --options.expandResponses \"200,201,202,203,204\" --options.pathInMiddlePanel true",
    "test": "spectral lint openapi.yaml"
  }
}
